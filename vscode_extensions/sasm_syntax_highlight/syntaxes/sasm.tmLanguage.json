{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Simulated Assembly Lang",
	"patterns": [
		{
			"name": "comment.line.semicolon.sasm",
			"match": ";.*$"
		},
		{
			"name": "string.quoted.double.sasm",
			"match": "\\\".*\\\""
		},
		{
			"name": "entity.name.function.sasm",
			"match": "\\w+:"
		},
		{
			"name": "keyword.control.directive.sasm",
			"match": "%\\b(bind|include)\\b"
		},
		{
			"name": "keyword.control.flow.sasm",
			"match": "(DONOP|INVOK|RET(VL)?|CALL|LOOP|JMP[UC]|SHUTS)"
		},
		{
			"name": "keyword.control.stack.sasm",
			"match": "(PUSHR|PUSH|SPOP|SPOPR|DUPS|SWAP|COPY)"
		},
		{
			"name": "keyword.operator.cast.sasm",
			"match": "(I2F|U2F|F2I|F2U)"
		},
		{
			"name": "support.function.io.sasm",
			"match": "(READ(1|2|4|8)[IU]|WRITE(1|2|4|8))"
		},
		{
			"name": "keyword.operator.comparison.sasm",
			"match": "(EQ|NE|GT|GE|LT|LE)[IUF]"
		},
		{
			"name": "keyword.operator.logical.sasm",
			"match": "(ANDB|ORB|XOR|NOTB|NOT|SHL|SHR)"
		},
		{
			"name": "keyword.operator.register.sasm",
			"match": "(SETR|GETR)"
		},
		{
			"name": "keyword.operator.arithmetic.sasm",
			"match": "(ADD|SUB|MUL|DIV|MOD)[IUF]"
		},
		{
			"name": "variable.other.register.sasm",
			"match": "\\[(H0|H1|I0|I1|JS|KC|L0|L1|L2|L3|OP|P0|P1|P2|P3|QT|RF)[v]{0,1}\\]"
		},
		{
			"name": "variable.other.sasm",
			"match": "[a-zA-Z_][a-zA-Z0-9_]*"
		},
		{
			"name": "constant.numeric.integer.sasm",
			"match": "[\\-0-9][0-9]*"
		}
	],
	"repository": {},
	"scopeName": "source.sasm"
}
